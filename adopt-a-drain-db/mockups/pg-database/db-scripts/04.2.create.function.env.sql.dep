CREATE OR REPLACE FUNCTION
api_schema.env(varname TEXT) RETURNS TEXT
AS $$
  DECLARE rc TEXT;
BEGIN
  -- secret needs to be moved to environment variable
  SELECT '{"' + varname + '": "'+ current_setting(varname) + '"}'} into rc;

  RETURN rc;
END;  $$ LANGUAGE plpgsql;
